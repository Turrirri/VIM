"""parahumanos.py"""

SUFIJOS = {
    1000: ["KB", "MB", "GB", "TB", "PB", "EB", "ZB", "YB"],
    1024: ["KiB", "MiB", "GiB", "TiB", "PiB", "EiB", "ZiB", "YiB"],
}


def tamanyo_aproximado(tamanyo, un_kilobyte_es_1024_bytes=True):
    """Convierte un tamaño de fichero en formato legible por personas

 Argumentos/parámetros:
    tamanyo -- tamaño del fichero en bytes
    un_kilobyte_es_1024_bytes -- si True (por defecto) , usa multiplos de 1024,
    si False, usa multiplos de 1000 retorna: string"""

    if not isinstance(tamanyo, (int, float)):
        raise TypeError("el tamaño debe ser un número")
    if not isinstance(un_kilobyte_es_1024_bytes, bool):
        raise TypeError("un_kilobyte_es_1024_bytes debe ser un booleano")
        multiplo = 1024 if un_kilobyte_es_1024_bytes else 1000
        sufijo = SUFIJOS[multiplo][0]
        if tamanyo < 0:
            raise ValueError("el número debe ser no negativo")
    multiplo = 1024 if un_kilobyte_es_1024_bytes else 1000
    for sufijo in SUFIJOS[multiplo]:
        tamanyo /= multiplo
    if tamanyo < multiplo:
        return f"Tamaño: {tamanyo:.1f} {sufijo}"
    raise ValueError("número muy grande")


if __name__ == "__main__":
    print(tamanyo_aproximado(1000000000000, False))
print(tamanyo_aproximado(1000000000000))
