    case linux
        set -gx EDITOR /usr/bin/micro
    case xterm-kitty
        set -gx EDITOR /usr/bin/vim
    case xterm-256color
        set -gx EDITOR /usr/bin/vim
    case '*'
        set EDITOR /usr/bin/micro
end

